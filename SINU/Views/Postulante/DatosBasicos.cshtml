@model SINU.ViewModels.DatosBasicos
<br />
@using (Ajax.BeginForm("GuardaDatosBasicos", "Postulante", null, 
    new AjaxOptions
        {
            HttpMethod = "POST",
            OnSuccess = "OnSuccess",
            OnFailure = "OnFailure",
            UpdateTargetId = "resultTarget"
        },
    new { id = "MyNewNameId" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="form-group row ">


                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.vPersona_DatosBasicos.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.vPersona_DatosBasicos.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.Apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.vPersona_DatosBasicos.Nombres, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.vPersona_DatosBasicos.Nombres, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.Nombres, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.vPersona_DatosBasicos.DNI, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.vPersona_DatosBasicos.DNI, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.DNI, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Sexo, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.vPersona_DatosBasicos.IdSexo, new SelectList(Model.Sexo, "IdSexo", "Descripcion"), null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.IdSexo)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.vPersona_DatosBasicos.Telefono, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.vPersona_DatosBasicos.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.Telefono, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.vPersona_DatosBasicos.Celular, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.vPersona_DatosBasicos.Celular, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.Celular, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.vPersona_DatosBasicos.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.vPersona_DatosBasicos.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.vPersona_DatosBasicos.NombreInst, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.vPersona_DatosBasicos.IdPreferencia, new SelectList(Model.vPeriodosInscrips, "IdInstitucion", "NombreInst"), "Seleccione una Opcion", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.NombreInst)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OficinasYDelegaciones, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.vPersona_DatosBasicos.IdDelegacionOficinaIngresoInscribio, new SelectList(Model.OficinasYDelegaciones, "IdOficinasYDelegaciones", "Nombre"), "Seleccione una Opcion", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.IdDelegacionOficinaIngresoInscribio)
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.vPersona_DatosBasicos.ComoSeEntero, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.vPersona_DatosBasicos.ComoSeEntero, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vPersona_DatosBasicos.ComoSeEntero, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <br />
            </div>
            <div class="form-group pl-3">
                <input type="submit" value="Submit" class="btn btn-success" />

            </div>


        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

      

    </script>

}

