                    <div class="carousel-caption d-none d-md-block">

                    </div>
                </div>
                <!-- Slide Three - Set the background image for this slide in the line below -->
                <div class="carousel-item" style="background-image: url('https://gacetamarinera.com.ar/wp-content/uploads/2019/10/09-10-19-Aniversario_ESNM-00-e1570722949878.jpg')">
                    <div class="carousel-caption d-none d-md-block">

                    </div>
                </div>
                <div class="content-title">
                    <titulo class=" ">Armada Argentina</titulo>
                </div>
                
            </div>                
        </div>
    </header>

    <!-- Page Content -->
    <div class="container">
        <div class="mb-5">
            <h2 class="my-4 tcard">Periodos de Inscripción:</h2>
        </div>
        <!-- /.row -->
        <div class="card-deck ">
            @{
                List<SINU.Models.vPeriodosInscrip> Periodos = Model.ToList();
                Int32 inst = 0; //indice del vector vPeriodosInscrip indicando que Instituto se esta creando su tarjeta
                var per = 0; //contador de periodo para una institucion
                string InstAnterior; //id de la institucion que se esta armando el card
                while (inst < Periodos.Count())
                {
                    InstAnterior = Periodos[inst].NombreInst;
                    <div class="card card1" style="align-items:center;text-align:center; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.46), 0 6px 20px 0 rgba(0, 0, 0, 0.45);">
                        <img class="card-img imgi" src="~/Imagenes/A_A_insignia.gif" alt="Card image cap" style="">
                        <div class="card-header container-fluid" >
                            <h6 class="tcard">@InstAnterior</h6>@*//ayuda : Periodos[inst].Tooltip*@
                        </div>
                        <div class="card-body container-fluid">
                            <h5 class="">@Periodos[inst].Titulo </h5>@**@
                            @{
                                per = 0;
                                while (inst < Periodos.Count() && InstAnterior == Periodos[inst].NombreInst)
                                {
                                    per++;
                                    // armado de la fila de un nuevo periodo
                                    //mostrar FechaInicio y Fecha Fin con el contador de per

                                    <div class="row card-footer">
                                        <h6>@per&ordm;&ensp;</h6>
                                        <p> @Periodos[inst].FechaInicio.ToString("dd/MM/yyyy")</p>
                                        <hr />
                                        <p>@Periodos[inst].FechaFinal.ToString("dd/MM/yyyy")</p>
                                    </div>



                                    inst++;
                                }

                                @*@Html.ActionLink("Inscribite", "Register", "Account", null, htmlAttributes: new { @class = "btn btn-lg btn-block btn-outline-primary" })*@
                            }
                        </div>
                    </div>
                }
            }

            @* Link de ¨Plantillas https://getbootstrap.com/docs/4.1/examples/#content *@


        </div>
        









        <!-- /.row -->
        <hr>

        <!-- Call to Action Section -->
        <div class="row mb-4">
            <div class="col-md-8">
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestias, expedita, saepe, vero rerum deleniti beatae veniam harum neque nemo praesentium cum alias asperiores commodi.</p>
            </div>
            <div class="col-md-4">
                <a class="btn btn-lg btn-secondary btn-block" href="#">Call to Action</a>
            </div>
        </div>

    </div>
    <!-- /.container -->
    <!-- Footer -->

    <!-- Bootstrap core JavaScript -->
    @*<script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>*@


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
